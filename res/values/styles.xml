<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

      <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/ActionBar.JsFiddleQuery</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.JsFiddleQuery</item>
        <item name="android:actionBarWidgetTheme">@style/Widget.JsFiddleQuery</item>
    </style>
    
    <!-- ActionBar styles -->
  	<style name="ActionBar.JsFiddleQuery" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
       <item name="android:background">@color/logo_bg_color</item>	
       <item name="android:displayOptions">showHome|useLogo</item>
       <item name="android:icon">@drawable/actionbar_logo</item>
  	</style>
  	
  	<style name="PopupMenu.JsFiddleQuery" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel</item>
    </style>
    
  	<style name="Widget.JsFiddleQuery" parent="@android:style/Theme.Light">
        <item name="android:textColorHint">@android:color/white</item>
    </style>
</resources>
